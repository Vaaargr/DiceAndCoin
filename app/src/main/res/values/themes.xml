<resources >
    <!-- Base application theme. -->
    <style name="Theme.DiceAndCoinBasic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_for_green_grace</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/on_primary_for_green_grace</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/green_grace</item>
        <item name="android:textViewStyle">@style/TextForGreenGrace</item>
        <item name="textAppearanceButton">@style/TextForGreenGrace</item>
    </style>

